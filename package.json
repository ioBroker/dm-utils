{
  "name": "@iobroker/dm-utils",
  "version": "1.0.0",
  "description": "ioBroker Device Manager utilities for backend",
  "main": "build/index.js",
  "publishConfig": {
    "access": "public"
  },
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "updateCommonTs": "node tasks.js",
